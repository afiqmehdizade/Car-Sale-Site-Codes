@model AspFinalProje.Models.User
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Visitors an Admin Panel Category Bootstrap Responsive Website Template | Registration :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Visitors Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/bootstrap.min.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Public/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Areas/Admin/Public/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/font.css" type="text/css" />
    <link href="~/Areas/Admin/Public/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Areas/Admin/Public/js/jquery2.0.3.min.js"></script>
</head>
<body>
    <div class="reg-w3">
        <div class="w3layouts-main">
            <h2>Qeydiyyatdan Keçin</h2>
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Firstname, new { @class = "ggg", placeholder = "Ad" })
                    @Html.ValidationMessageFor(m => m.Firstname, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Lastname, new { @class = "ggg", placeholder = "Soyad" })
                    @Html.ValidationMessageFor(m => m.Lastname, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Email, new { @class = "ggg", type = "email", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Phone, new { @class = "ggg", type = "number", placeholder = "Telefon Nömrəsi*55 555 55 55" })
                    @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Password, new { @class = "ggg", type = "password", placeholder = "Parol" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "ggg", type = "password", placeholder = "Təkrar Parol" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                </div>
                <h4><input type="checkbox" />QAYDALARI OXUDUM VƏ RAZIYAM</h4>

                <div class="clearfix"></div>
                <input type="submit" value="Göndər" name="register">
            </form>
            <p>Hesabınız Var?<a href="/Account/Login">Giriş Edin</a></p>
        </div>
    </div>
    <script src="~/Areas/Admin/Public/js/bootstrap.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Admin/Public/js/scripts.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="~/Areas/Admin/Public/js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Areas/Admin/Public/js/jquery.scrollTo.js"></script>
</body>
</html>

@Scripts.Render("~/bundles/jqueryval")