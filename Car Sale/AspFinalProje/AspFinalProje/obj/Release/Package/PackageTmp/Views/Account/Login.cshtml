
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Visitors an Admin Panel Category Bootstrap Responsive Website Template | Login :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Visitors Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Public/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Areas/Admin/Public/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/font.css" type="text/css" />
    <link href="~/Areas/Admin/Public/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Areas/Admin/Public/js/jquery2.0.3.min.js"></script>
</head>
<body>
    <div class="log-w3">
        <div class="w3layouts-main">
            <h2>Giris Edin</h2>
            <form method="post">
                @Html.AntiForgeryToken()

                <input type="email" class="ggg" name="Email" value="samir@code.az"  placeholder="Email" required="">
                <input type="password" class="ggg" name="Password" value="samir123"  placeholder="Parol" required="">
                @Html.ValidationMessage("loginError",null, new { @class = "text-danger" })
                <input style="width:20px;height:20px;" id="asAdmin"  value="" type="checkbox" name="asAdmin" />
                <span style="font-size:20px;color:white" >Admin Girişi</span>
                <div class="clearfix"></div>
                <input type="submit" value="Daxil ol" name="login">
            </form>
            <p>Hesabınız Yoxdur?<a href="@Url.Action("Registration","Account")">Qeydiyyatdan Keçin</a></p>
        </div>
    </div>
    <script src="~/Areas/Admin/Public/js/bootstrap.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Admin/Public/js/scripts.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.scrollTo.js"></script>
    <script>
        $(document).on("click", "#asAdmin", function (e) {
            if (this.checked) {
                $(this).attr("value", "true");
            } 
        });</script>
</body>
</html>

