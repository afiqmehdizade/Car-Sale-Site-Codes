
@model AspFinalProje.Models.New
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Visitors an Admin Panel Category Bootstrap Responsive Website Template | Registration :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Visitors Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/bootstrap.min.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Areas/Admin/Public/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Areas/Admin/Public/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/font.css" type="text/css" />
    <link href="~/Areas/Admin/Public/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Areas/Admin/Public/js/jquery2.0.3.min.js"></script>
</head>
<body>
    <div class="reg-w3">
        <div class="w3layouts-main">
            <h2>Dəyişiklik Səhifəsi</h2>
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Image)
                @Html.HiddenFor(m => m.CreatedAt)
                @Html.HiddenFor(m => m.Id)



                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "text-warning" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", type = "text", placeholder = "Melumat", rows = 7 })
                    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content, new { @class = "text-warning" })
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", type = "text", placeholder = "Melumat", rows = 7 })
                    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
                </div>

                <img class="img-rounded" src="~/Images/@Model.Image" width="360" />\
                <div class="form-group">
                    @Html.LabelFor(m => m.Photo, new { @class = "text-warning" })
                    @Html.TextBoxFor(m => m.Photo, new { @class = "ggg", type = "file", accept = "image/*", placeholder = "Shekli" })
                    @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
                </div>

                <input type="submit" value="Göndər">
                <a style="margin-left:145px;" href="/Admin/News/Index" class="btn btn-success btn-lg ">Ləğv et</a>

            </form>
        </div>
    </div>


    <script src="~/Areas/Admin/Public/js/bootstrap.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Admin/Public/js/scripts.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Public/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="~/Areas/Admin/Public/js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Areas/Admin/Public/js/jquery.scrollTo.js"></script>
</body>
</html>

@Scripts.Render("~/bundles/jqueryval")





