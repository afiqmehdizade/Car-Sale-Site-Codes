@model IEnumerable<AspFinalProje.Models.New>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<a style="margin: 30px 0;" href="/Admin/News/Create" class="btn btn-primary btn-lg">
    <span class="lnr lnr-plus-circle"></span> &nbsp; Yeni Xəbər Yarat
</a>


<table  class="table table-bordered table-striped ">
    <thead class="bg-info">
        <tr>
            <th style="color:black;vertical-align:middle;text-align:center">@Html.DisplayNameFor(m => m.CreatedAt)</th>
            <th style="color:black;vertical-align:middle;text-align:center">@Html.DisplayNameFor(m => m.Title)</th>
            <th style="color:black;vertical-align:middle;text-align:center">@Html.DisplayNameFor(m => m.Content)</th>
            <th style="color:black;vertical-align:middle;text-align:center">@Html.DisplayNameFor(m => m.Image)</th>
            <th style="color:black;vertical-align:middle;text-align:center">Dəyişiklik</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td style="color:black;vertical-align:middle;text-align:center">@item.CreatedAt</td>
                <td style="color:black;vertical-align:middle;text-align:center">@item.Title</td>
                <td style="color:black;vertical-align:middle;text-align:center">@item.Content</td>

                <td style="vertical-align: middle; text-align: center;">
                    <img width="150" class="img-rounded" src="~/Images/@item.Image" />
                </td>
                <td style="vertical-align: middle; text-align: center;">
                    <a style="margin:5px;" title="Edit New" class="btn btn-warning" href="/Admin/News/Edit/@item.Id">
                        <i class="fas fa-edit"></i> Düzəliş et
                    </a>
                    <a title="Delete New" class="btn btn-danger" href="/Admin/News/Delete/@item.Id">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>
